<main class="session-new">
  <section class="user-form-container w-25 p-4 mx-auto my-4 bg-light">
    <h1 class="sign-title"><span>&gt; </span>Login</h1>
    <%= simple_form_for :session, url: signin_path() do |f| %>
      <%= f.input :username, label: false, placeholder: 'Username' %>
      <%= f.button :submit, 'Login', class: "btn-primary btn-block" %>
    <% end %>
    <%= link_to 'Sign Up', signup_path, class: 'sign-link d-block text-center mt-3' %>
  </section>
</main>
