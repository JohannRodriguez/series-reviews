<main class="session-new">
  <h1 class="page-title"><span>&gt; </span>Sign In</h1>
  <section class="user-form-container w-75 p-4 mx-auto mb-4 bg-light">
    <%= simple_form_for :session, url: signin_path() do |f| %>
      <%= f.error_notification %>
      <%= f.input :username, label: false, placeholder: 'Username' %>
      <%= f.button :submit, 'Sign In', class: "btn-primary" %>
    <% end %>
  </section>
</main>
